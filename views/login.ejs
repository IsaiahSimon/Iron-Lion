<%- include('partials/header', {user:user}) -%>

<main class="container">
  <div class="row justify-content-center">
    <section class="col-6 mt-5">
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
      <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
      <div class="alert alert-info"><%= el.msg %></div>
      <% }) %> <% } %>
      <form action="/login" method="POST">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label"
            >Email address</label
          >
          <input
            type="email"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="email"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="exampleInputPassword1"
            name="password"
          />
        </div>
        <div class="col-md-7 pl-2">
          <button class="col-md-3 btn btn-primary" type="submit" data-nlok-ref-guid="005c4d03-1d52-47cf-83de-f9903700c1b6">
            Sign in</button>
            <a class="btn btn-link" href="/forgot">Forgot your password?</a>
        </div>
      </form>
    </section>
  </div>
</main>

<%- include('partials/footer') -%>
