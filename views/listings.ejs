<%- include('partials/header') -%>

  <!-- Grid Display -->
  <div class="album py-5 bg-light">
    <div class="container">

      <h2>Listings </h2>
      <a href="listings/newListing" class="btn btn-primary">Add new listing</a>


      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

        <% for(var i=0; i<listings.length; i++) {%>
        <!-- Generate Cards -->
        <div class="col">
          <div class="card shadow-sm">
            <a href="/listings/<%= listings[i]._id%>">
              <img src="<%= listings[i].image%>" alt="" class="card-img-top" width="100%" height="225">
            </a>

            <div class="card-body">
              <h3><%= listings[i].title%></h3>
              <p class="card-text"><%= listings[i].description%></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="listings/<%= listings[i]._id%>" class="btn btn-sm btn-success">View</a>
                  <a href="listings/<%= listings[i]._id%>/edit" class="btn btn-sm btn-outline-secondary">Edit</a>
                  <a href="listings/<%= listings[i]._id%>" class="btn btn-sm btn-danger">Delete</a>
                </div>
                
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>


<%- include('partials/footer') -%>