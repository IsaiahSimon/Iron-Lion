<%- include('partials/header', {user:user}) -%>

  <div class="container">
    <div class="pb-2 mt-2 mb-4 border-bottom">
      <h3>Profile Information</h3>
    </div>

    <form action="/account/profile" method="POST"><input type="hidden" name="_csrf"
        value="vcBRow7xOWrDzxvQouMyvZqJxFYhY8aq2f86c=">
      <div class="form-group row"><label class="col-md-3 col-form-label font-weight-bold text-end"
          for="email">Email</label>
        <div class="col-md-7"><input class="form-control" type="email" name="email" id="email"
            autocomplete="email" required=""></div>
        <div class="offset-sm-3 col-md-7 pl-3">
          <div class="text-danger font-italic">Unverified: &nbsp;<a href="/account/verify">Send verification email</a>
          </div>
        </div>
      </div>
      <div class="form-group row"><label class="col-md-3 col-form-label font-weight-bold text-end"
          for="name">Name</label>
        <div class="col-md-7"><input class="form-control" type="text" name="name" id="name" autocomplete="name"></div>
      </div>
      <div class="form-group row"><label class="col-md-3 col-form-label font-weight-bold text-end">Gender</label>
        <div class="col-sm-6">
          <div class="form-check form-check-inline"><input class="form-check-input" type="radio" name="gender"
              value="male" data-toggle="radio"><label class="form-check-label">Male</label></div>
          <div class="form-check form-check-inline"><input class="form-check-input" type="radio" name="gender"
              value="female" data-toggle="radio"><label class="form-check-label">Female</label></div>
          <div class="form-check form-check-inline"><input class="form-check-input" type="radio" name="gender"
              value="other" data-toggle="radio"><label class="form-check-label">Other</label></div>
        </div>
      </div>
      <div class="form-group row"><label class="col-md-3 col-form-label font-weight-bold text-end"
          for="location">Location</label>
        <div class="col-md-7"><input class="form-control" type="text" name="location" id="location" autocomplete="">
        </div>
      </div>
      <div class="form-group row"><label class="col-md-3 col-form-label font-weight-bold text-end"
          for="website">Website</label>
        <div class="col-md-7"><input class="form-control" type="text" name="website" id="website" autocomplete="url">
        </div>
      </div>
      <div class="form-group row"><label class="col-md-3 col-form-label font-weight-bold text-end">Gravatar</label>
        <div class="col-sm-4"><img class="profile"
            src="https://gravatar.com/avatar/a6d14de05d7b2c3cf4fae7ae14cfa7f3?s=200&amp;d=retro" width="100"
            height="100">
        </div>
      </div>
      <div class="form-group">
        <div class="offset-sm-3 col-md-7 pl-2"><button class="btn btn btn-primary" type="submit"><i
              class="fas fa-pencil-alt fa-sm"></i>Update Profile</button></div>
      </div>
    </form>

    <!--TODO Implement Change Password -->
    <div class="pb-2 mt-2 mb-4 border-bottom">
      <h3>Change Password</h3>
    </div>
    <form action="/account/password" method="POST"><input type="hidden" name="_csrf"
        value="vcBRow7xOWrDzxvQouMyvZqJxFYhY8aq2f86c=">
      <div class="form-group row"><label class="col-md-3 col-form-label font-weight-bold text-end" for="password">New
          Password</label>
        <div class="col-md-7"><input class="form-control" type="password" name="password" id="password"
            autocomplete="new-password" minlength="8" required=""></div>
      </div>
      <div class="form-group row"><label class="col-md-3 col-form-label font-weight-bold text-end"
          for="confirmPassword">Confirm Password</label>
        <div class="col-md-7"><input class="form-control" type="password" name="confirmPassword" id="confirmPassword"
            autocomplete="new-password" minlength="8" required=""></div>
      </div>
      <div class="form-group">
        <div class="offset-sm-3 col-md-7 pl-2"><button class="btn btn-primary" type="submit"><i
              class="fas fa-lock fa-sm"></i>Change Password</button></div>
      </div>
    </form>

